@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;

<h2>Edit</h2>

<h4>Edit this Machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.Status)
    @Html.EditorFor(model => model.Status)

    <input type="submit" value="Save" class="btn btn-success btn-xs" />
}

<p>@Html.ActionLink("Back to list", "Index", null, null, new { @class="button" })</p>