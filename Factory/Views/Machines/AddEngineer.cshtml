@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add an Engineer</h2>

<h4>Add an Engineer to this Machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm("Action", "Controller", FormMethod.Post, new { style = "margin-right:10px", @class = "formbox" }))
{
  @Html.HiddenFor(model => model.MachineId)
  @Html.Label("Select Engineer", null, new { @class="label" })
  @Html.DropDownList("EngineerId", null, null, new { @class="input" })

  <input type="submit" value="Save" class="btn btn-success btn-xs" />
}

<p>@Html.ActionLink("Back to list", "Index", null, null, new { @class="button" })</p>