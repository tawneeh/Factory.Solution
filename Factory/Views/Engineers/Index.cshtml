@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
} 

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId }, new { @class="name" })</li>
}

<p>@Html.ActionLink("Home", "Index", "Home", null, new { @class="button" })</p>
<p>@Html.ActionLink("Add a new Engineer", "Create", null, null, new { @class="button" })</p>