@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new Engineer</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, null, new { @class="form" })
  @Html.TextBoxFor(model => model.Name, null, new { @class="form" })

  @Html.LabelFor(model => model.HireDate, null, new { @class="form" })
