@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;


<h2>Add a Machine</h2>

<h4>Add a Machine to this Engineer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  @Html.Label("Select Machine", null, new { @class="label" })
  @Html.DropDownList("MachineId")  

  <input type="submit" value="Save" class="btn btn-success btn-xs" />
}

<p>@Html.ActionLink("Back to list", "Index", null, null, new { @class="button" })</p>